<h1>Your Goals</h1>

<br>
<% counter = 1 %>
<div class="center">
	<% @lists.each do |list| %>
		<div class="col-md-4 list-box">
			<div class="list-box-contents">
				<%= list.title.length %>
				Back to Test
			</div>
		</div>

		<% counter += 1 %>

		<% if counter > 3 %>
			<% counter = 1 %>		
			<div class="row"></div>
		<% end %>
	<% end %>
</div>

<% if counter > 3 %>
  <div class="row col-md-4 list-box">
  	<a href="lists/new"><button type="button" class="btn btn-lg btn-primary new-list-button">+</button></a>
	</div>
<% else %>
	<div class="col-md-4 list-box">
		<a href="lists/new"><button type="button" class="btn btn-lg btn-primary new-list-button">+</button></a>
	</div>
<% end %>

