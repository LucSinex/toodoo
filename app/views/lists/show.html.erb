<h1><%= @list.title %></h1>

<div class="row">
	<div class="subgoals-table">
		<table class="table">

			<th>Subgoal</th>
			<th colspan="2"></th>

			<% @list.goals.each do |goal| %>
				<tr>
					<td><%= goal.content %></td>
                                        <%= form_for goal, url: list_goal_path(@list, goal), method: :put do |f| %>
                                          <%= f.hidden_field(:done, value: true) %>
                                          <td><%= f.submit "Finished?" %></td>
                                        <% end %>
				</tr>
			<% end %>

			<tr>
				<%= form_for [@list, @list.goals.build] do |f| %>
					<td><%= f.text_field :content %></td>
					<td><%= f.submit "Create Subgoal" %></td>
				<% end %>
			</tr>

		</table>
	</div>
</div>
<br>

<%= link_to "Back", root_path %>




